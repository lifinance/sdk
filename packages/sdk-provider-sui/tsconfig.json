{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "composite": true,
    "sourceMap": true,
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": [
    "tests",
    "./src/**/*.spec.ts",
    "./src/**/*.mock.ts",
    "./src/**/*.handlers.ts"
  ]
}
